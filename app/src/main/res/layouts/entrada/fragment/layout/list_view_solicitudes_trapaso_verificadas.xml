<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/sucess_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idNUMEROSAP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NUMERO SAP"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>


                <TextView
                    android:id="@+id/bodegaOrigen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="BODEGA ORIGEN"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/bodegaDestino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="BODEGA DESTINO"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/nTransportista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="TRANSPORTISTA"
                    android:textColor="#FFFFFF"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>