<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor"
    android:elevation="5dp"
    app:cardCornerRadius="@dimen/loginCardRadius">


    <LinearLayout
        style="@style/linearParent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="PERSONAL" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Montacargista" />

            <EditText
                android:id="@+id/etNMontacarguista"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1" />

            <requestFocus />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/etMontacarguista"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Analista de Inventarios" />

            <EditText
                android:id="@+id/etNAnalistaa"
                style="@style/dropdown"


                android:gravity="center"

                android:inputType="text"
                android:maxLines="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etAnalistaa"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Guardia de Seguridad" />

            <EditText
                android:id="@+id/etNGuardiaa"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/etGuardiaa"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEntradaRampaa"
                style="@style/loginButton"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="Entrada a la Rampa" />
            <EditText
                android:id="@+id/etEntradaRampaa"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"/>
                <!--android:enabled="false"-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardarDatosEntrada"
                style="@style/loginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="GUARDAR Y ESCANEAR ENTRADA" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
