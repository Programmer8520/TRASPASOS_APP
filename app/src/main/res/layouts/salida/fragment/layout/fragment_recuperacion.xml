<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.salida.recuperacionFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabDatosRecuperados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient"
        app:tabIndicatorColor="#FFFFFF"
        app:tabTextColor="@color/whiteCardColor">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/btnDatosGenerales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos Recuperados" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/btnEscaneo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escaneo" />


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpDatosRecuperados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabDatosRecuperados" />


    <FrameLayout
        android:id="@+id/resumen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>