<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor"
    android:elevation="5dp"
    app:cardCornerRadius="@dimen/loginCardRadius">


    <LinearLayout
        style="@style/linearParent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:padding="20dp">

        <TextView
            style="@style/headerTextPrimary"
            android:layout_marginTop="5dp"
            android:text="INFORMACION RECUPERADA" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextLabel"
                    android:layout_width="86dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tarimas Recuperadas" />

                <EditText
                    android:id="@+id/etTarimasR"
                    style="@style/dropdown"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextLabel"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Entrada a la Rampa" />

                <EditText
                    android:id="@+id/etEntradaRampaR"
                    style="@style/dropdown"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1" />

            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    style="@style/TextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="B. Origen" />

                <EditText
                    android:id="@+id/etBodegaOrigenR"
                    style="@style/dropdown"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1" />
            </LinearLayout>

            <Spinner
                android:id="@+id/sAlmacenOrigen"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear2"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="B. Destino" />
                <EditText
                    android:id="@+id/etBodegaDestinoR"
                    style="@style/dropdown"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1" />
            </LinearLayout>

            <Spinner
                android:id="@+id/sAlmacenDestino"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linear3">

                <TextView
                    style="@style/TextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Analista" />
                <EditText
                    android:id="@+id/etAnalistaR"
                    style="@style/dropdown"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1" />
            </LinearLayout>

            <Spinner
                android:id="@+id/sAnalistasDeInventarios"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Guardia" />
            <EditText
                android:id="@+id/etGuardiaR"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Montacarguista" />
            <EditText
                android:id="@+id/etMontacarguistaR"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Transportista" />
            <EditText
                android:id="@+id/etConductorR"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tractor" />

                <EditText
                    android:id="@+id/etPlacasTractorR"
                    style="@style/dropdown"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Remolque" />

                <EditText
                    android:id="@+id/etPlacasRemolqueR"
                    style="@style/dropdown"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLines="1" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Observaciones" />
            <EditText
                android:id="@+id/etObservaciones"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditarRegistros"
                style="@style/editButton"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="EDITAR FORMULARIO" />

            <Button
                android:id="@+id/btnRecuperarProgreso"
                style="@style/loginButton"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="GUARDAR Y CONTINUAR" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
