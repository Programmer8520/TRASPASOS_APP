<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor"
    android:elevation="5dp"
    app:cardCornerRadius="@dimen/loginCardRadius">


    <LinearLayout
        style="@style/linearParent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="TRANSPORTE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Transportista" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <Spinner
                android:id="@+id/sTransportista"
                style="@style/dropdown"
                android:gravity="center"

                android:inputType="text"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Conductor" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <Spinner
                android:id="@+id/sNombresConductores"
                style="@style/dropdown"
                android:gravity="center"

                android:inputType="text"
                android:maxLines="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Placas del Tractor" />
            <EditText
                android:id="@+id/etPlacasTractor"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"

                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Placas del Remolque" />
            <EditText
                android:id="@+id/etPlacasRemolque"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"

                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sello(s)" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/etSello"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"
                android:text="SIN SELLOS:"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Observacion" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/etObservacion"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEntradaRampa"
                style="@style/loginButton"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"

                android:text="Entrada a la Rampa"

                />
            <EditText
                android:id="@+id/etEntradaRampa"
                style="@style/dropdown"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardarProgreso"
                style="@style/loginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="GUARDAR PROGRESO" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
